#include <stdio.h>

int main() {
    int amount, notes[8] = {500, 100, 50, 20, 10, 5, 2, 1}, count[8] = {0};

    printf("Enter the amount: ");
    scanf("%d", &amount);

    for (int i = 0; i < 8; i++) {
        if (amount >= notes[i]) {
            count[i] = amount / notes[i];
            amount = amount - count[i] * notes[i];
        }
    }

    printf("The minimum number of notes required:\n");

    for (int i = 0; i < 8; i++) {
        if (count[i] > 0)
            printf("%d x Rs. %d\n", count[i], notes[i]);
    }

    return 0;
}
